# StellarRec Backend Environment Variables

# Application
NODE_ENV=development
API_VERSION=v1

# Database
DATABASE_URL=postgresql://stellarrec:stellarrec_dev_password@localhost:5432/stellarrec_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=stellarrec_dev
DATABASE_USER=stellarrec
DATABASE_PASSWORD=stellarrec_dev_password

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200

# JWT Authentication
JWT_SECRET=stellarrec_jwt_secret_dev_change_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# API Gateway
GATEWAY_PORT=3000
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Services Ports
USER_SERVICE_PORT=3001
AI_SERVICE_PORT=3002
APPLICATION_SERVICE_PORT=3003
LETTER_SERVICE_PORT=3004
NOTIFICATION_SERVICE_PORT=3005
ANALYTICS_SERVICE_PORT=3006
FILE_SERVICE_PORT=3007

# External APIs
OPENAI_API_KEY=your_openai_api_key_here
SENDGRID_API_KEY=your_sendgrid_api_key_here
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here

# AWS Services (for production)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
S3_BUCKET_NAME=stellarrec-files-dev

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000,https://stellarrec.com
SESSION_SECRET=stellarrec_session_secret_dev

# Monitoring
LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true
METRICS_ENABLED=true

# AI/ML Configuration
ML_MODEL_PATH=./models
UNIVERSITY_DATA_PATH=./data/universities.json
ESSAY_ANALYSIS_MODEL=bert-base-uncased
MATCHING_ALGORITHM=hybrid

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png
UPLOAD_PATH=./uploads

# Email Templates
EMAIL_TEMPLATE_PATH=./templates/email
FROM_EMAIL=noreply@stellarrec.com
FROM_NAME=StellarRec Platform