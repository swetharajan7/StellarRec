# StellarRec Backend Configuration
# File: backend/.env
# Purpose: Environment variables for database, email, and security

# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
# Replace these with your actual database credentials
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_database_username
DB_PASSWORD=your_database_password  
DB_NAME=stellarrec_db

# Email Configuration (we'll set this up in Step 2)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM="StellarRec <noreply@stellarrec.com>"

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Frontend URL (for CORS and email links)
FRONTEND_URL=https://stellarrec.netlify.app
BACKEND_URL=https://your-backend-url.com

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt
