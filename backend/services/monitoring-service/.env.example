# Database
DATABASE_URL="postgresql://username:password@localhost:5432/stellarrec_monitoring?schema=public"

# Server Configuration
PORT=3011
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info

# Elasticsearch Configuration (Optional)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_AUTH=false
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
ALERT_EMAIL_FROM=alerts@stellarrec.com
ALERT_EMAIL_TO=admin@stellarrec.com

# Slack Configuration (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Webhook Configuration (Optional)
ALERT_WEBHOOK_URL=https://your-webhook-endpoint.com/alerts

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# Grafana Configuration (Optional)
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=your-grafana-api-key

# Prometheus Configuration
PROMETHEUS_URL=http://localhost:9090

# Service Discovery
SERVICE_DISCOVERY_ENABLED=true
SERVICE_REGISTRY_URL=http://localhost:8500