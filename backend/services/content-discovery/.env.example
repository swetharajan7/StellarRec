# Database Configuration
DATABASE_URL="postgresql://stellarrec:password@localhost:5432/stellarrec_discovery?schema=public"

# Server Configuration
PORT=3005
NODE_ENV=development
LOG_LEVEL=info

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="24h"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# External Services
USER_SERVICE_URL="http://localhost:3001"
SEARCH_SERVICE_URL="http://localhost:3003"
AI_SERVICE_URL="http://localhost:3002"

# Recommendation Configuration
RECOMMENDATION_CACHE_TTL=3600
RECOMMENDATION_BATCH_SIZE=50
RECOMMENDATION_UPDATE_INTERVAL=300000

# Trending Configuration
TRENDING_UPDATE_INTERVAL=300000
TRENDING_CACHE_TTL=1800

# Behavior Tracking Configuration
BEHAVIOR_BATCH_SIZE=100
BEHAVIOR_FLUSH_INTERVAL=30000
BEHAVIOR_RETENTION_DAYS=90

# Personalization Configuration
PERSONALIZATION_CONFIDENCE_THRESHOLD=0.5
PERSONALIZATION_DIVERSITY_FACTOR=0.2

# Security
CORS_ORIGIN="http://localhost:3000"
HELMET_ENABLED=true
TRUST_PROXY=false

# Monitoring
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Machine Learning Configuration
ML_MODEL_UPDATE_INTERVAL=86400000
ML_SIMILARITY_THRESHOLD=0.7
ML_CLUSTERING_ENABLED=true

# Content Discovery Configuration
DISCOVERY_DEFAULT_LIMIT=20
DISCOVERY_MAX_LIMIT=100
DISCOVERY_CACHE_TTL=600

# Analytics Configuration
ANALYTICS_BATCH_SIZE=200
ANALYTICS_FLUSH_INTERVAL=60000