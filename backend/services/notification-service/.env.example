# Database
DATABASE_URL="postgresql://username:password@localhost:5432/stellarrec_notifications?schema=public"

# Server Configuration
PORT=3009
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=info

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Email Configuration
EMAIL_PROVIDER=smtp
EMAIL_FROM=noreply@stellarrec.com

# SMTP Configuration
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_TLS_REJECT_UNAUTHORIZED=true

# SendGrid Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_WEBHOOK_SECRET=your-sendgrid-webhook-secret

# Mailgun Configuration
MAILGUN_USERNAME=your-mailgun-username
MAILGUN_PASSWORD=your-mailgun-password
MAILGUN_WEBHOOK_SECRET=your-mailgun-webhook-secret

# AWS SES Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# SMS Configuration
SMS_PROVIDER=twilio

# Twilio Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Nexmo Configuration
NEXMO_API_KEY=your-nexmo-api-key
NEXMO_API_SECRET=your-nexmo-api-secret
NEXMO_FROM_NUMBER=+1234567890

# Push Notification Configuration
# Web Push (VAPID)
VAPID_SUBJECT=mailto:admin@stellarrec.com
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# Firebase Configuration
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project"}

# Batch Processing
EMAIL_BATCH_SIZE=10
EMAIL_BATCH_DELAY=1000
SMS_BATCH_SIZE=5
SMS_BATCH_DELAY=2000
PUSH_BATCH_SIZE=100
PUSH_BATCH_DELAY=500

# Frontend URL (for links in notifications)
FRONTEND_URL=https://stellarrec.com

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090