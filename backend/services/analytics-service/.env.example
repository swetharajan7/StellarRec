# Database Configuration
DATABASE_URL="postgresql://stellarrec:password@localhost:5432/stellarrec_analytics?schema=public"

# Server Configuration
PORT=3006
NODE_ENV=development
LOG_LEVEL=info

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="24h"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# External Services
USER_SERVICE_URL="http://localhost:3001"
SEARCH_SERVICE_URL="http://localhost:3003"
APPLICATION_SERVICE_URL="http://localhost:3007"
CONTENT_DISCOVERY_URL="http://localhost:3005"

# Analytics Configuration
METRICS_BATCH_SIZE=100
METRICS_FLUSH_INTERVAL=30000
AGGREGATION_INTERVAL=300000

# Reporting Configuration
REPORT_CACHE_TTL=3600
REPORT_EXPORT_PATH="/tmp/reports"

# Dashboard Configuration
DASHBOARD_CACHE_TTL=1800
WIDGET_REFRESH_INTERVAL=60000

# Insights Configuration
INSIGHT_GENERATION_INTERVAL=3600000
ANOMALY_DETECTION_THRESHOLD=2.0
CORRELATION_THRESHOLD=0.5

# Predictive Analytics Configuration
MODEL_RETRAIN_INTERVAL=604800000
PREDICTION_CONFIDENCE_THRESHOLD=0.7
FORECAST_HORIZON_DAYS=30

# Data Aggregation Configuration
AGGREGATION_BATCH_SIZE=1000
AGGREGATION_RETENTION_DAYS=365

# Security
CORS_ORIGIN="http://localhost:3000"
HELMET_ENABLED=true
TRUST_PROXY=false

# Monitoring
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Machine Learning Configuration
ML_MODEL_PATH="/tmp/models"
ML_TRAINING_DATA_LIMIT=10000
ML_FEATURE_SELECTION_THRESHOLD=0.1

# Visualization Configuration
CHART_CACHE_TTL=900
CHART_MAX_DATA_POINTS=1000

# Performance Configuration
QUERY_TIMEOUT=30000
MAX_CONCURRENT_JOBS=5
MEMORY_LIMIT_MB=2048