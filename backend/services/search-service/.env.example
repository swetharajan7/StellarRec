# Database Configuration
DATABASE_URL="postgresql://stellarrec:password@localhost:5432/stellarrec_search?schema=public"

# Elasticsearch Configuration
ELASTICSEARCH_URL="http://localhost:9200"
ELASTICSEARCH_USERNAME=""
ELASTICSEARCH_PASSWORD=""
ELASTICSEARCH_API_KEY=""

# Redis Configuration (for caching)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# Server Configuration
PORT=3003
NODE_ENV=development
LOG_LEVEL=info

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="24h"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Search Configuration
SEARCH_DEFAULT_LIMIT=20
SEARCH_MAX_LIMIT=100
SEARCH_TIMEOUT_MS=5000

# Analytics Configuration
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL_MS=30000

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="pdf,doc,docx,txt,rtf"

# External Services
USER_SERVICE_URL="http://localhost:3001"
DOCUMENT_SERVICE_URL="http://localhost:3004"

# Monitoring
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Security
CORS_ORIGIN="http://localhost:3000"
HELMET_ENABLED=true
TRUST_PROXY=false