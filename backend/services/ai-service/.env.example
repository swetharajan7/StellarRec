# Environment Configuration
ENVIRONMENT=development
DEBUG=true

# Service Configuration
SERVICE_NAME=ai-service
SERVICE_VERSION=1.0.0
HOST=0.0.0.0
PORT=8002

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=postgresql://stellarrec:password@localhost:5432/stellarrec
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# ML Models
MODEL_CACHE_DIR=./models
MODEL_DOWNLOAD_TIMEOUT=300
MAX_MODEL_MEMORY_MB=2048

# External APIs
OPENAI_API_KEY=your-openai-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200

# Feature Flags
ENABLE_ESSAY_ANALYSIS=true
ENABLE_UNIVERSITY_MATCHING=true
ENABLE_PREDICTIONS=true
ENABLE_REAL_TIME_SUGGESTIONS=true

# Essay Analysis
ESSAY_MAX_LENGTH=2000
ESSAY_MIN_LENGTH=50