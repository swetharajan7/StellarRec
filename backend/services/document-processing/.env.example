# Database
DATABASE_URL="postgresql://username:password@localhost:5432/stellarrec_processing?schema=public"

# Server Configuration
PORT=3010
NODE_ENV=development
LOG_LEVEL=info

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme
ELASTICSEARCH_INDEX=stellarrec-documents

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# File Processing Limits
MAX_FILE_SIZE=104857600  # 100MB in bytes
MAX_FILES_PER_REQUEST=5
TEMP_DIR=/tmp

# OCR Configuration
DEFAULT_OCR_LANGUAGE=eng
OCR_CONFIDENCE_THRESHOLD=60

# Conversion Configuration
DEFAULT_IMAGE_QUALITY=85
DEFAULT_PREVIEW_WIDTH=300
DEFAULT_PREVIEW_HEIGHT=400

# Cache Configuration
ENABLE_PROCESSING_CACHE=true
CACHE_EXPIRY_HOURS=24

# Performance Configuration
MAX_CONCURRENT_JOBS=5
PROCESSING_TIMEOUT_MS=300000  # 5 minutes

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9091