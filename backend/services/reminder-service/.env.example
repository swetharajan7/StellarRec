# Database
DATABASE_URL="postgresql://username:password@localhost:5432/stellarrec_reminders?schema=public"

# Server Configuration
PORT=3010
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500

# Logging
LOG_LEVEL=info

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# External Services
USER_SERVICE_URL=http://localhost:3001
NOTIFICATION_SERVICE_URL=http://localhost:3009
ANALYTICS_SERVICE_URL=http://localhost:3006

# Machine Learning
ML_MODEL_PATH=./models
ENABLE_ML_OPTIMIZATION=true

# Scheduling
REMINDER_PROCESSING_INTERVAL=60000
ESCALATION_PROCESSING_INTERVAL=300000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090