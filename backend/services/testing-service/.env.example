# Testing Service Configuration
PORT=3016
NODE_ENV=test

# Test Database
TEST_DATABASE_URL="postgresql://test:test@localhost:5432/stellarrec_test?schema=public"

# Test Redis
TEST_REDIS_URL="redis://localhost:6379/1"

# API Base URLs for Testing
API_BASE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3001
APPLICATION_SERVICE_URL=http://localhost:3004
AI_SERVICE_URL=http://localhost:8000
NOTIFICATION_SERVICE_URL=http://localhost:3009
SEARCH_SERVICE_URL=http://localhost:3007
FILE_SERVICE_URL=http://localhost:3013

# E2E Testing
E2E_BASE_URL=http://localhost:3000
E2E_HEADLESS=true
E2E_SLOWMO=50

# Performance Testing
CONCURRENT_USERS=50
TEST_DURATION=60
LOAD_TEST_RAMP_UP=10

# Security Testing
SECURITY_SCAN_ENABLED=true
VULNERABILITY_THRESHOLD=high

# Test Coverage
COVERAGE_THRESHOLD_LINES=90
COVERAGE_THRESHOLD_FUNCTIONS=90
COVERAGE_THRESHOLD_BRANCHES=90
COVERAGE_THRESHOLD_STATEMENTS=90

# Test Execution
JEST_TIMEOUT=30000
JEST_MAX_WORKERS=4
JEST_BAIL=false

# Test Containers
TESTCONTAINERS_RYUK_DISABLED=false
TESTCONTAINERS_CHECKS_DISABLE=false

# Reporting
REPORT_OUTPUT_DIR=./test-reports
REPORT_FORMAT=html,json,junit
COVERAGE_REPORT_DIR=./coverage

# External Services (for testing)
MOCK_EXTERNAL_APIS=true
MOCK_EMAIL_SERVICE=true
MOCK_SMS_SERVICE=true
MOCK_PAYMENT_SERVICE=true

# Test Data
TEST_DATA_CLEANUP=true
TEST_DATA_SEED=true
FAKER_LOCALE=en

# Logging
LOG_LEVEL=warn
TEST_LOG_LEVEL=error

# Monitoring
METRICS_ENABLED=true
PERFORMANCE_MONITORING=true

# CI/CD Integration
CI_MODE=false
PARALLEL_TESTS=true
FAIL_FAST=false