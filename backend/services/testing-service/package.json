{
  "name": "@stellarrec/testing-service",
  "version": "1.0.0",
  "description": "Comprehensive testing suite for the StellarRec platform with unit tests, integration tests, end-to-end tests, performance tests, and security testing",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --collectCoverageFrom='../*/src/**/*.{ts,js}' --coverageDirectory=coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:performance": "jest --testPathPattern=performance",
    "test:security": "jest --testPathPattern=security",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:performance && npm run test:security",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "report": "node dist/reporters/testReporter.js",
    "ci": "npm run test:all && npm run test:coverage && npm run report"
  },
  "dependencies": {
    "express": "^4.18.2",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "uuid": "^9.0.1",
    "lodash": "^4.17.21",
    "date-fns": "^2.30.0",
    "puppeteer": "^21.5.0",
    "artillery": "^2.0.0",
    "owasp-zap": "^0.2.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.9.0",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "@types/puppeteer": "^5.4.7",
    "@types/uuid": "^9.0.7",
    "@types/lodash": "^4.14.202",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2",
    "supertest": "^6.3.3",
    "nock": "^13.4.0",
    "testcontainers": "^10.2.1",
    "newman": "^6.0.0",
    "lighthouse": "^11.3.0",
    "snyk": "^1.1248.0",
    "eslint-plugin-security": "^1.7.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "../*/src/**/*.{ts,js}",
      "!../*/src/**/*.d.ts",
      "!../*/src/**/index.ts",
      "!../*/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "setupFilesAfterEnv": ["<rootDir>/src/setup/testSetup.ts"],
    "testTimeout": 30000
  },
  "keywords": [
    "testing",
    "unit-tests",
    "integration-tests",
    "e2e-tests",
    "performance-tests",
    "security-tests",
    "test-automation",
    "quality-assurance",
    "stellarrec"
  ],
  "author": "StellarRec Team",
  "license": "MIT"
}