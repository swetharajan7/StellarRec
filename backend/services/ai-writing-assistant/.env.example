# Database
DATABASE_URL="postgresql://username:password@localhost:5432/stellarrec_ai_writing?schema=public"

# Server Configuration
PORT=3015
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# AI Services
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Grammar Checking Services
GRAMMARLY_API_KEY=your-grammarly-api-key
LANGUAGETOOL_API_URL=https://api.languagetool.org/v2/check

# Plagiarism Detection
PLAGIARISM_API_KEY=your-plagiarism-api-key
PLAGIARISM_API_URL=https://api.plagiarismcheck.org

# External APIs
THESAURUS_API_KEY=your-thesaurus-api-key
DICTIONARY_API_KEY=your-dictionary-api-key

# Caching
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=txt,doc,docx,pdf

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_ENDPOINT=http://localhost:3006/api/v1/events