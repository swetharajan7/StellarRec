{
  "name": "stellarrec-frontend",
  "version": "1.0.0",
  "description": "StellarRec - AI-Powered College Application Platform Frontend",
  "main": "index.html",
  "scripts": {
    "start": "npx http-server . -p 3000 -c-1",
    "build": "npm run build:prod",
    "build:prod": "npm run minify && npm run optimize",
    "build:staging": "npm run minify",
    "build:dev": "echo 'Development build - no processing needed'",
    "minify": "npx html-minifier-terser --input-dir . --output-dir dist --file-ext html --collapse-whitespace --remove-comments --minify-css --minify-js",
    "optimize": "npm run optimize:images && npm run optimize:js",
    "optimize:images": "npx imagemin '**/*.{jpg,jpeg,png,gif,svg}' --out-dir=dist",
    "optimize:js": "npx terser frontend/js/*.js --compress --mangle --output dist/frontend/js/app.min.js",
    "test": "npx jest",
    "lint": "npx eslint frontend/js/*.js",
    "format": "npx prettier --write '**/*.{js,html,css,json}'",
    "deploy": "netlify deploy --prod",
    "deploy:preview": "netlify deploy",
    "analyze": "npx webpack-bundle-analyzer dist/static/js/*.js",
    "lighthouse": "npx lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html",
    "validate": "npx html-validate *.html"
  },
  "keywords": [
    "college-applications",
    "ai-powered",
    "university-matching",
    "recommendation-letters",
    "education-technology",
    "student-platform"
  ],
  "author": "StellarRec Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/swetharajan7/StellarRec.git"
  },
  "homepage": "https://stellarrec.com",
  "devDependencies": {
    "@netlify/cli": "^17.0.0",
    "eslint": "^8.50.0",
    "html-minifier-terser": "^7.2.0",
    "html-validate": "^8.5.0",
    "http-server": "^14.1.1",
    "imagemin": "^8.0.1",
    "imagemin-cli": "^7.0.0",
    "jest": "^29.7.0",
    "lighthouse": "^11.2.0",
    "prettier": "^3.0.3",
    "terser": "^5.22.0",
    "webpack-bundle-analyzer": "^4.9.1"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "date-fns": "^2.30.0",
    "lodash": "^4.17.21"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/frontend/js/test-setup.js"],
    "testMatch": ["<rootDir>/frontend/js/**/*.test.js"],
    "collectCoverageFrom": [
      "frontend/js/**/*.js",
      "!frontend/js/**/*.test.js",
      "!frontend/js/test-setup.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "warn",
      "prefer-const": "error",
      "no-var": "error"
    },
    "globals": {
      "StellarRecAPI": "readonly",
      "DashboardController": "readonly",
      "StellaChatbot": "readonly"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  }
}